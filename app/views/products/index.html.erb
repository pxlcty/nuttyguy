<div id="featured">
	<h2 class="category">Featured Gifts</h2>
	<hr>
</div>
<div class="row">
	<% @products.each do |product| %>
	<div class="col-md-3 col-sm-4 col-xs-12">
		<%= link_to product do %>
		<img id="bill" class="" src="img/product_images/corkscrew-bill.jpg" alt="Bill Clinton Corkscrew">
		<p class="product"><%= product.title %></p>
		<% end %>
		<p class="gray-text"><%= number_to_currency product.price %></p>
	</div>
	<% end %>
</div> <!--/.row -->
